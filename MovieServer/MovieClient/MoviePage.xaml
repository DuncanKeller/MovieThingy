<Page
    x:Class="MovieClient.MoviePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MovieClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF649664">
        <Button x:Name="backButton" Content="&lt; Back" HorizontalAlignment="Left" Margin="35,22,0,0" VerticalAlignment="Top" Height="123" Width="165" Click="backButton_Click"/>
        <TextBlock x:Name="name" HorizontalAlignment="Left" Margin="218,22,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="110" Width="1114" FontSize="40"/>
        <TextBlock x:Name="year" HorizontalAlignment="Left" Margin="35,168,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="61" Width="547" FontSize="40"/>
        <TextBlock x:Name="rating" HorizontalAlignment="Left" Margin="35,234,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="61" Width="547" FontSize="40"/>
        <TextBlock x:Name="director" HorizontalAlignment="Left" Margin="35,421,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="61" Width="547" FontSize="30"/>
        <TextBlock x:Name="writer" HorizontalAlignment="Left" Margin="35,482,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="61" Width="547" FontSize="30"/>
        <TextBlock x:Name="genre" HorizontalAlignment="Left" Margin="35,295,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="61" Width="547" FontSize="30"/>
        <TextBlock x:Name="plot" HorizontalAlignment="Left" Margin="603,168,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="497" Width="736" FontSize="30"/>
        <Button x:Name="play" Content="Play Movie" HorizontalAlignment="Left" Margin="1136,674,0,0" VerticalAlignment="Top" Height="84" Width="220"/>
        <Button x:Name="trailer" Content="Watch a Trailer" HorizontalAlignment="Left" Margin="10,705,0,0" VerticalAlignment="Top" Height="53" Width="220" Click="trailer_Click"/>
        <TextBlock x:Name="actors" HorizontalAlignment="Left" Margin="35,543,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="122" Width="547" FontSize="30"/>
        <TextBlock x:Name="runtime" HorizontalAlignment="Left" Margin="35,355,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="61" Width="547" FontSize="30"/>

    </Grid>
</Page>